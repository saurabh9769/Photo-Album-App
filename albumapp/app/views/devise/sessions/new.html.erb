<div class="container">
  <div class="row">
    <div class="well">
      <h1 class="text-center">Album Application</h1><br>
      <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
          <div class="login-panel panel panel-default">
            <div class="panel-heading">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name) ,class: "form-control") do |f| %>
              <h3 class="panel-title text-center">Sign In</h3>
            </div>
            <div class="panel-body">
              <form role="form">
                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true, class: "form-control" ,placeholder: "E-mail" , required: "required" %>
                  </div>
                  <div class="form-group">
                      <%= f.password_field :password, autocomplete: "off" , class: "form-control" , placeholder: "Password" , required: "required"%>
                  </div>
                  <br>
                  <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-12">
                      <div class="form-group">
                        <% if devise_mapping.rememberable? -%>
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me %>
                        <% end -%>
                      </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-12">
                      <div class="form group">
                        
                        <button type="submit" class="btn btn-success btn-block">Sign in</button>
                        <br>
                        
                        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>

                            <%= link_to "Sign up", new_registration_path(resource_name) , class: "btn btn-info btn-block" , method: :get %>
                        <% end -%>
                        <br>
                        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-danger btn-block" , method: :get %><br />
                        <% end -%>
                      </div>
                    </div>
                  </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  #container1 {
    background-color: #e2dada;
  }

  .centered-form {
    margin-top: 50px;
    margin-bottom: 50px;
  }

  .centered-form .panel {
    background: rgba(255, 255, 255, 0.8);
    box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
  }
</style>
<% end %>