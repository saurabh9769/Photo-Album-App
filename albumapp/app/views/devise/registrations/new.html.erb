<div class="container">
  <div class="row">
    <div class="well">
      <h1 class="text-center">Album Application</h1><br>
      <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= devise_error_messages! %>
                    <h3 class="panel-title text-center">Please Register</h3>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <div class="field">
                            
                            <%= f.email_field :email, autofocus: true , class: "form-control input-sm" , placeholder: "Email Address" %>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12">
                                <div class="form-group">
                                    
                                    <% if @minimum_password_length %>
                                    <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
                                    <% end %><br />
                                    <%= f.password_field :password, autocomplete: "off", class: "form-control input-sm" , placeholder: "Password" %>
                                </div><br>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-12">
                                <div class="form-group">
                                    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-sm" , placeholder: "Confirm Password" %>
                                </div>
                            </div>
                        </div><br>

                        <%= f.submit "Sign up" , class: "btn btn-info btn-block"%>
                        <%= link_to "Log in" , new_session_path(resource_name), class: "btn btn-info btn-block" , method: :get %><br>
                    </form>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
#container1 {
    background-color: #e2dada;
}

.centered-form {
    margin-top: 50px;
    margin-bottom: 50px;
}

.centered-form .panel {
    background: rgba(255, 255, 255, 0.8);
    box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
}
</style>
<% end %>