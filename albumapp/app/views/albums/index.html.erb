<p id="notice"><%= notice %></p>

<h1><strong>Listing Albums</strong></h1>
  <div class="container-fluid">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Thumbnail</th>
          <th>Title</th>
          <th>Description</th>
          <th colspan="6"></th>
        </tr>
      </thead>
  </div>
  
  <tbody>
    
    <% @albums.each do |album| %>
      <tr class="active">
        <td><%= image_tag album.thumbnail_url(:thumb) %></td>
        <td><%= album.title %></td>
        <td><%= album.description %></td>      
        <td><%= link_to 'View', album_path(album) %></td>
        <td><%= link_to 'Update', edit_album_path(album) %></td>
        <td><%= link_to 'Delete', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  
  </tbody>
  
</table>

<br>

